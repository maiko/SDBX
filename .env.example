# =========================
# SDBX Configuration
# =========================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# =========================
# Core Settings
# =========================
SDBX_DOMAIN=sdbx.example.com
SDBX_EXPOSE_MODE=cloudflared  # cloudflared | direct
SDBX_TIMEZONE=Europe/Paris

# =========================
# Storage Paths
# =========================
# Where configs are stored
SDBX_CONFIG_PATH=./config

# Where downloads and media are stored
SDBX_DATA_PATH=./data
SDBX_DOWNLOADS_PATH=${SDBX_DATA_PATH}/downloads
SDBX_MEDIA_PATH=${SDBX_DATA_PATH}/media
SDBX_MOVIES_PATH=${SDBX_MEDIA_PATH}/movies
SDBX_TV_PATH=${SDBX_MEDIA_PATH}/tv
SDBX_MUSIC_PATH=${SDBX_MEDIA_PATH}/music
SDBX_BOOKS_PATH=${SDBX_MEDIA_PATH}/books

# =========================
# Permissions
# =========================
PUID=1000
PGID=1000
UMASK=002

# =========================
# VPN Configuration
# =========================
SDBX_VPN_PROVIDER=nordvpn
SDBX_VPN_USERNAME=your_vpn_username
# Password should be in secrets/vpn_password.txt

# NordVPN specific
SDBX_VPN_SERVER_COUNTRIES=France
SDBX_VPN_SERVER_CATEGORIES=P2P

# =========================
# Plex
# =========================
# Get claim token from https://plex.tv/claim
PLEX_CLAIM=
PLEX_ADVERTISE_URL=https://plex.${SDBX_DOMAIN}:443

# =========================
# Traefik
# =========================
TRAEFIK_LOG_LEVEL=INFO

# For direct mode with Let's Encrypt
TRAEFIK_ACME_EMAIL=admin@example.com

# =========================
# Cloudflared (if using tunnel mode)
# =========================
# Token should be in secrets/cloudflared_tunnel_token.txt

# =========================
# Watchtower
# =========================
WATCHTOWER_SCHEDULE=0 0 4 * * *
WATCHTOWER_CLEANUP=true
WATCHTOWER_LABEL_ENABLE=true

# =========================
# qBittorrent
# =========================
QBT_WEBUI_PORT=8080
QBT_TORRENT_PORT=6881

# =========================
# Homepage Dashboard
# =========================
HOMEPAGE_TITLE=Seedbox
HOMEPAGE_SUBTITLE=Powered by SDBX

# =========================
# Monitoring
# =========================
UPTIME_KUMA_PORT=3001
