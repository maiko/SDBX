# =============================================================================
# Gluetun VPN Configuration
# Generated by sdbx init
#
# Documentation: https://github.com/qdm12/gluetun-wiki
# Provider docs: https://github.com/qdm12/gluetun-wiki/tree/main/setup/providers
# =============================================================================

# Provider (set by sdbx init)
VPN_SERVICE_PROVIDER={{.Config.VPNProvider}}

# VPN Type: openvpn or wireguard
VPN_TYPE=wireguard

# Server selection (pick one or combine)
{{- if .Config.VPNCountry}}
SERVER_COUNTRIES={{.Config.VPNCountry}}
{{- else}}
# SERVER_COUNTRIES=Netherlands
{{- end}}
# SERVER_REGIONS=
# SERVER_CITIES=
# SERVER_HOSTNAMES=

{{- if eq .Config.VPNProvider "nordvpn"}}
# =============================================================================
# NordVPN Configuration
# Get credentials: https://my.nordaccount.com/dashboard/nordvpn/manual-configuration/
# =============================================================================

# For OpenVPN (VPN_TYPE=openvpn):
# OPENVPN_USER=your_service_username
# OPENVPN_PASSWORD=your_service_password

# For Wireguard (VPN_TYPE=wireguard) - RECOMMENDED:
WIREGUARD_PRIVATE_KEY=your_wireguard_private_key

# NordVPN-specific options
SERVER_CATEGORIES=P2P

{{- else if eq .Config.VPNProvider "mullvad"}}
# =============================================================================
# Mullvad Configuration
# =============================================================================

# For Wireguard:
WIREGUARD_PRIVATE_KEY=your_private_key
WIREGUARD_ADDRESSES=your_address/32

# For OpenVPN:
# OPENVPN_USER=your_account_number

{{- else if eq .Config.VPNProvider "protonvpn"}}
# =============================================================================
# ProtonVPN Configuration
# Get credentials: https://account.protonvpn.com/account#openvpn
# =============================================================================

# For OpenVPN:
OPENVPN_USER=your_openvpn_username
OPENVPN_PASSWORD=your_openvpn_password

# For Wireguard:
# WIREGUARD_PRIVATE_KEY=your_private_key
# WIREGUARD_ADDRESSES=your_address/32

{{- else if eq .Config.VPNProvider "pia"}}
# =============================================================================
# Private Internet Access Configuration
# =============================================================================

OPENVPN_USER=your_username
OPENVPN_PASSWORD=your_password

{{- else if eq .Config.VPNProvider "surfshark"}}
# =============================================================================
# Surfshark Configuration
# Get credentials: https://my.surfshark.com/vpn/manual-setup/main
# =============================================================================

OPENVPN_USER=your_username
OPENVPN_PASSWORD=your_password

{{- else}}
# =============================================================================
# Custom VPN Configuration
# See: https://github.com/qdm12/gluetun-wiki/tree/main/setup/providers
# =============================================================================

# For OpenVPN custom config, mount your .ovpn file and set:
# VPN_TYPE=openvpn
# OPENVPN_CUSTOM_CONFIG=/gluetun/custom.ovpn
# OPENVPN_USER=your_username
# OPENVPN_PASSWORD=your_password

# For Wireguard custom:
# VPN_TYPE=wireguard
# WIREGUARD_PRIVATE_KEY=your_key
# WIREGUARD_ADDRESSES=10.x.x.x/32
# WIREGUARD_PUBLIC_KEY=peer_public_key
# VPN_ENDPOINT_IP=vpn_server_ip
# VPN_ENDPOINT_PORT=51820

{{- end}}

# =============================================================================
# Advanced Options
# =============================================================================

# DNS over TLS
DOT=on
DOT_PROVIDERS=cloudflare

# Firewall kill-switch (enabled by default)
# FIREWALL=on

# Allow LAN access
# FIREWALL_OUTBOUND_SUBNETS=192.168.1.0/24

# Health check (for container orchestration)
# HEALTH_VPN_DURATION_INITIAL=10s
# HEALTH_VPN_DURATION_ADDITION=5s
